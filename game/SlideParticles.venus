return fn() {
  local img = love.graphics.newImage('imgs/particles/dirt.png')
  local psystem = love.graphics.newParticleSystem(img, 32)
  psystem:setParticleLifetime(.5, 1)
	psystem:setEmissionRate(20)
	psystem:setSizeVariation(.3)
	psystem:setLinearAcceleration(0, -40, 100, 40) ## Random movement in all directions.
	psystem:setColors(255, 255, 255, 200,   255, 255, 255, 200,   255, 255, 255, 180,   255, 255, 255, 0) ## Fade to transparency.
  return psystem
}
